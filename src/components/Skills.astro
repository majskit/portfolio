---
import { skills } from '../data/skills';

const skillCategories = {
  frontend: skills.filter(skill => skill.category === 'frontend'),
  backend: skills.filter(skill => skill.category === 'backend'),
  database: skills.filter(skill => skill.category === 'database'),
  tools: skills.filter(skill => skill.category === 'tools'),
  soft: skills.filter(skill => skill.category === 'soft')
};

const categoryTitles = {
  frontend: 'Frontend Development',
  backend: 'Backend Development',
  database: 'Databases',
  tools: 'Tools and Technologies',
  soft: 'Soft Skills'
};

const categoryColors = {
  frontend: 'from-cyan-500 to-blue-600',
  backend: 'from-blue-500 to-purple-600',
  database: 'from-purple-500 to-pink-600',
  tools: 'from-pink-500 to-red-600',
  soft: 'from-indigo-500 to-cyan-600'
};

const categoryIcons = {
  frontend: '🌐',
  backend: '🚀',
  database: '💾',
  tools: '🛠️',
  soft: '👨‍🚀'
};
---

<section id="skills" class="py-16 bg-gradient-to-br from-gray-900 via-blue-900 to-black relative overflow-hidden">
  <!-- Cosmic background -->
  <div class="absolute inset-0">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-blue-500/10 rounded-full blur-3xl animate-float" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-1/2 w-48 h-48 bg-purple-500/10 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        <span class="bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-transparent">
          Tech Arsenal & Capabilities
        </span>
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-cyan-400 to-blue-400 mx-auto mb-4 rounded-full shadow-lg shadow-cyan-400/50"></div>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        🛸 Navigation systems and technologies mastered during space exploration
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {Object.entries(skillCategories).map(([category, categorySkills]) => (
        <div class="group bg-gradient-to-br from-gray-800/80 to-gray-900/80 backdrop-blur-xl rounded-xl border border-cyan-400/20 p-6 hover:border-cyan-400/40 transition-all duration-300 hover:transform hover:scale-105 relative overflow-hidden">
          <!-- Glowing background effect -->
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          
          <div class={`w-14 h-14 rounded-xl bg-gradient-to-r ${categoryColors[category]} flex items-center justify-center mb-4 shadow-lg relative z-10 group-hover:animate-glow`}>
            <span class="text-white text-2xl">
              {categoryIcons[category]}
            </span>
          </div>
          
          <h3 class="text-lg font-semibold text-cyan-400 mb-4 relative z-10">
            {categoryTitles[category]}
          </h3>
          
          <div class="grid grid-cols-1 gap-2 relative z-10">
            {categorySkills.map(skill => (
              <div class="flex items-center space-x-3 p-3 bg-gradient-to-r from-gray-900/50 to-gray-800/50 backdrop-blur-sm rounded-lg border border-cyan-400/10 hover:border-cyan-400/30 transition-all duration-200 group-hover:bg-gradient-to-r group-hover:from-cyan-500/10 group-hover:to-blue-500/10">
                <div class="w-6 h-6 bg-gradient-to-br from-cyan-500/20 to-blue-500/20 border border-cyan-400/30 rounded-md flex items-center justify-center flex-shrink-0">
                  <span class="text-cyan-400 text-xs font-bold">
                    {skill.name.charAt(0)}
                  </span>
                </div>
                <span class="text-gray-300 font-medium text-sm">{skill.name}</span>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Skills summary - Cosmic Stats Console -->
    <div class="mt-16 text-center">
      <h3 class="text-2xl font-bold text-cyan-400 mb-8 flex items-center justify-center">
        <span class="mr-3">📊</span>
        Mission Statistics
      </h3>
      <div class="grid grid-cols-2 md:grid-cols-6 gap-4 max-w-6xl mx-auto">
        <div class="bg-gradient-to-br from-gray-800/80 to-gray-900/80 backdrop-blur-xl rounded-xl p-4 border border-cyan-400/20 hover:border-cyan-400/40 transition-all duration-300 group relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          <div class="text-2xl font-bold text-cyan-400 mb-1 relative z-10">15+</div>
          <div class="text-gray-300 font-medium text-xs relative z-10">Technologies Mastered</div>
          <div class="text-xs text-gray-400 mt-1 relative z-10">🚀</div>
        </div>
        <div class="bg-gradient-to-br from-gray-800/80 to-gray-900/80 backdrop-blur-xl rounded-xl p-4 border border-cyan-400/20 hover:border-cyan-400/40 transition-all duration-300 group relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          <div class="text-2xl font-bold text-cyan-400 mb-1 relative z-10">8+</div>
          <div class="text-gray-300 font-medium text-xs relative z-10">Frameworks Explored</div>
          <div class="text-xs text-gray-400 mt-1 relative z-10">⚡</div>
        </div>
        <div class="bg-gradient-to-br from-gray-800/80 to-gray-900/80 backdrop-blur-xl rounded-xl p-4 border border-cyan-400/20 hover:border-cyan-400/40 transition-all duration-300 group relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          <div class="text-2xl font-bold text-cyan-400 mb-1 relative z-10">∞</div>
          <div class="text-gray-300 font-medium text-xs relative z-10">Coffee Consumed</div>
          <div class="text-xs text-gray-400 mt-1 relative z-10">☕</div>
        </div>
        <div class="bg-gradient-to-br from-gray-800/80 to-gray-900/80 backdrop-blur-xl rounded-xl p-4 border border-cyan-400/20 hover:border-cyan-400/40 transition-all duration-300 group relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          <div class="text-2xl font-bold text-cyan-400 mb-1 relative z-10">24/7</div>
          <div class="text-gray-300 font-medium text-xs relative z-10">Learning Mode</div>
          <div class="text-xs text-gray-400 mt-1 relative z-10">🧠</div>
        </div>
        <div class="bg-gradient-to-br from-gray-800/80 to-gray-900/80 backdrop-blur-xl rounded-xl p-4 border border-cyan-400/20 hover:border-cyan-400/40 transition-all duration-300 group relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          <div class="text-2xl font-bold text-cyan-400 mb-1 relative z-10">3+</div>
          <div class="text-gray-300 font-medium text-xs relative z-10">Databases</div>
          <div class="text-xs text-gray-400 mt-1 relative z-10">💾</div>
        </div>
        <div class="bg-gradient-to-br from-gray-800/80 to-gray-900/80 backdrop-blur-xl rounded-xl p-4 border border-cyan-400/20 hover:border-cyan-400/40 transition-all duration-300 group relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-cyan-500/5 to-blue-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
          <div class="text-2xl font-bold text-cyan-400 mb-1 relative z-10">100%</div>
          <div class="text-gray-300 font-medium text-xs relative z-10">Dedication</div>
          <div class="text-xs text-gray-400 mt-1 relative z-10">💪</div>
        </div>
      </div>
    </div>
  </div>
</section>