<section id="hero" class="min-h-screen flex items-center justify-center relative overflow-hidden bg-gradient-to-br from-gray-900 via-blue-900 to-black">
  <!-- Animated space background -->
  <div class="absolute inset-0">
    <!-- Stars -->
    <div class="absolute top-10 left-10 w-2 h-2 bg-cyan-400 rounded-full animate-pulse shadow-lg shadow-cyan-400/50"></div>
    <div class="absolute top-20 right-20 w-1 h-1 bg-white rounded-full animate-pulse"></div>
    <div class="absolute bottom-20 left-20 w-1 h-1 bg-cyan-300 rounded-full animate-pulse"></div>
    <div class="absolute top-1/3 right-1/3 w-1 h-1 bg-blue-300 rounded-full animate-pulse"></div>
    <div class="absolute bottom-1/3 left-1/4 w-2 h-2 bg-cyan-500 rounded-full animate-pulse shadow-lg shadow-cyan-500/50"></div>
    
    <!-- Floating particles -->
    <div class="absolute top-1/4 left-1/4 w-32 h-32 bg-cyan-500 bg-opacity-10 rounded-full animate-float blur-xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-24 h-24 bg-blue-500 bg-opacity-10 rounded-full animate-float blur-xl" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 right-10 w-16 h-16 bg-cyan-400 bg-opacity-10 rounded-full animate-float blur-xl" style="animation-delay: 2s;"></div>
  </div>

  <div class="container mx-auto px-6 text-center text-white relative z-10">
    <div class="animate-slide-up">
      <!-- Glowing title effect -->
      <div class="mb-8 animate-float-intro">
        <h1 class="text-6xl md:text-8xl font-bold mb-4 leading-tight">
          <span class="bg-gradient-to-r from-cyan-400 via-blue-400 to-cyan-300 bg-clip-text text-transparent drop-shadow-2xl">
            Houston, We Have a Developer!
          </span>
        </h1>
        <div class="w-32 h-1 bg-gradient-to-r from-cyan-400 to-blue-400 mx-auto rounded-full shadow-lg shadow-cyan-400/50"></div>
      </div>
      
      <p class="text-xl md:text-2xl mb-8 text-cyan-100 max-w-3xl mx-auto font-light">
        Software Developer navigating the digital universe
      </p>
